<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teaze Me!"
        android:id="@+id/teaze"
        android:layout_gravity="center_horizontal"
        android:layout_column="5"
        android:textColor="#FA378F"
        android:textSize="50px"
        android:clickable="true"
        android:onClick="buttonOnClick"
        android:layout_above="@+id/setting"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/setting"
        android:textSize="50px"
        android:clickable="true"
        android:onClick="buttonOnClick"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/teaze"
        android:layout_alignStart="@+id/teaze"
        android:enabled="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:id="@+id/userProfilePhoto"
            android:fitsSystemWindows="false"
            android:clickable="true"
            android:onClick="imageOnClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:src="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User&apos;s Name"
        android:id="@+id/textView"
        android:textSize="50px"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageButton"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginLeft="10dp" />

</RelativeLayout>